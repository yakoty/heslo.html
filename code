<body>
  <div class="card" id="card">

    <!-- FORMULÁŘ -->
    <div id="formSection">
      <h2>Zadejte heslo</h2>
      <label for="pw">Heslo</label>
      <input id="pw" type="password" autocomplete="off" />
      <button id="submitBtn">Pokračovat</button>
      <div class="msg" id="msg"></div>
    </div>

    <!-- RŮZNÉ SEKCE PODLE HESLA -->
    <div id="secretA" class="secret">
      <h3>Už se to blíží</h3>
      <p>Tento rok čekej neočekávané.</p>
      <p>Na mě však nezapomeň ještě se ti můžu hodit</p>
    </div>

    <div id="secretB" class="secret">
      <h3>Výsledek B</h3>
      <p>Obsah pro heslo <strong>"heslo2"</strong>.</p>
    </div>

    <div id="secretC" class="secret">
      <h3>Admin panel</h3>
      <p>Tajný obsah pro heslo <strong>"admin"</strong>.</p>
    </div>

  </div>

  <script>
    // === NASTAVENÍ HESLA ===
    const passwords = {
      "super-tajny-heslo": "secretA",
      "feig.snd2iáhfvk4.jhn;3ř1sgbfb": "secretB",
      "sfkgj7.,nn1538l;asfh4mýksjsgs": "secretC"
    };

    const formSection = document.getElementById("formSection");

    document.getElementById("submitBtn").onclick = () => {
      const pw = document.getElementById("pw").value;
      const msg = document.getElementById("msg");

      // schovat všechny sekce
      document.querySelectorAll(".secret").forEach(s => s.style.display = "none");

      if (passwords[pw]) {
        msg.textContent = "";

        // skryj formulář
        formSection.classList.add("hidden");

        // zobraz správnou sekci
        const sectionId = passwords[pw];
        document.getElementById(sectionId).style.display = "block";

      } else {
        msg.textContent = "Špatné heslo.";
      }
    };
  </script>
</body>
