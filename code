      color:#e8e8e8;
    }

    .card {
      background:#2a2a2a;
      padding:24px;
      border-radius:12px;
      box-shadow:0 4px 20px rgba(0,0,0,0.5);
      width:360px;
      transition:0.3s ease;
    }

    input[type="password"] {
      width:100%;
      padding:10px;
      margin-top:8px;
      box-sizing:border-box;
      background:#333;
      border:1px solid #555;
      color:#fff;
      border-radius:6px;
    }

    button {
      margin-top:12px;
      width:100%;
      padding:10px;
      cursor:pointer;
      background:#444;
      border:1px solid #666;
      color:#fff;
      border-radius:6px;
      transition:0.2s;
    }

    button:hover {
      background:#555;
    }

    .msg {
      margin-top:10px;
      color:#ff5555;
      min-height:18px;
    }

    .hidden {
      display:none;
    }

    .secret {
      margin-top:20px;
      display:none;
      padding:15px;
      background:#333;
      border-radius:8px;
      border:1px solid #555;
    }
